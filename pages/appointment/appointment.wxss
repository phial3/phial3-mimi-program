/* pages/appointment/appointment.wxss */
page {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.appointment_container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  /* background:rgba(0, 0, 0, 0.7) */
}

.appointment_box {
  width: 90%;
  height: 90%;
  max-width: 420px;
  max-height: 650px;
  min-width: 310px;
  background-color: #fff;
}

.appointment_title {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
}

.appointment_logo {
  margin-top: -5vh;
  margin-left: 5vw;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: flex-start;
}

.appointment_logo image {
  width: 40px;
  height: 40px;
}

.appointment_logo span {
  margin-left: 9vw;
  font-size: 20px;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  color: #333;
  opacity: 1;
}

.appointment_p {
  width: 90%;
  display: inline-block;
  font-size: 1.8rem;
  font-family: "Microsoft YaHei";
  font-weight: 400;
  line-height: 37px;
  color: #666666;
  opacity: 1;
  text-align: left;
  margin-bottom: 20px;
  margin-top: 25px;
}

.appointment_information {
  width: 90%;
  margin-left: 5%;
  display: flex;
  flex-direction: column;
  line-height: 20vw;
}

.appointment_information input {
  height: 55px;
  border: none;
  outline: none;
  padding: 0 15px;
  margin-top: 2vh;
  border-bottom: 1px solid #ccc;
}

.appointment_information select {
  height: 55px;
  border: none;
  outline: none;
  padding: 0 15px;
  margin-top: 2vh;
  background-color: transparent;
  border-bottom: 1px solid #ccc;
  appearance: none;
  -moz-appearance: none;
  /* Firefox */
  -webkit-appearance: none;
  /* Safari å’Œ Chrome */
}

.btn {
  width: 90%;
  height: 50px;
  margin-top: 5vh;
  border-radius: 50px;
  color: #fff;
  font-size: 20px;
  background-color: #ff746d;
  border: none;
  cursor: pointer;
  margin-top: 50px;
  margin-bottom: 50px;
  letter-spacing: 10px;
  margin-left: 5%;
}
